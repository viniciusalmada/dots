

[window]
command=xtitle -s
interval=persist

[simple]
full_text=This is a long white on red text
short_text=Short white on red text
background=#FF0000
color=#FFFFFF

[aligned]
full_text=Here.
min_width=100
align=center

[funky]
full_text=<span foreground="red" size="x-large">Roses</span> and <i><span color="#EE37B8">violets</span></i>!
markup=pango

[pacman]
full_text=c ·
command=echo "· ${full_text~~}"
color=#FFFF00

[epoch]
command=date +%s
interval=1

[restart]
full_text=Restart
command=i3-msg -q restart

